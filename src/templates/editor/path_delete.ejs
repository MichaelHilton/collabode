<% helpers.setHtmlTitle("Confirm Delete") %>
<% helpers.includeCss("editor_ejs.css") %>

<div id="editorpage">

<div id="editortop">
  <div id="docbar">
    <div id="docbarproject"><span><%= project.getName() %></span></div>
  </div>
</div>

<div id="sidebarbox">
  <div class="sidebarsection">
    <%= helpers.renderList("explorer", projects) %>
  </div>
</div>

<div id="padmain">
  <div id="padeditor">
    <form id="wizardcontainerbox" method="post">
      <h1>Delete <%= resource.getProjectRelativePath() %></h1>
      <p>Are you sure you want to delete this resource from the file system?</p>
      
      <div id="wizardbottom">
        <button type="submit">Delete resource</button>
      </div>
    </form>
  </div>
</div>
