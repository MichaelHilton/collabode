<% helpers.setHtmlTitle([ project.getName(), folder.getProjectRelativePath() ]) %>
<% helpers.includeCss("editor_ejs.css") %>

<div id="editorpage">

<%= helpers.renderPartial("docbar", { project: project.getName(), file: folder.getProjectRelativePath() }) %>

<div id="sidebarbox">
  <div class="sidebarsection">
    <%= helpers.renderList("explorer", projectfiles, folder) %>
  </div>
</div>

<div id="padmain">
  <div id="padeditor">
    <form id="wizardcontainerbox" method="post">
      <%= helpers.renderPartial("filegrid", { members: folder.members() }) %>
      <div><%= helpers.renderPartial("create", { inside: "folder" }) %></div>
      <div><%= helpers.renderPartial("acl", { acl: acl, resource: folder }) %></div>
      <div><%= helpers.renderPartial("markers", { markers: markers }) %></div>
    </form>
  </div>
</div>

</div>
